<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_item"
    tools:context="com.indstudy.nicholas.thegarage.HttpClasses.AddItemActivity">

    <TextView android:id="@+id/add_item_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_add_item"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_centerHorizontal="true" />

    <Spinner android:id="@+id/add_item_spinner"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:padding="20dp" android:layout_centerHorizontal="true"
        android:layout_below="@+id/add_item_header" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_item_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/add_item_spinner"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.indstudy.nicholas.thegarage.HttpClasses.AddItemActivity">
    </RelativeLayout>

</RelativeLayout>
